<body class="bg-dark">


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-form">
                    <form id="form1">
                        <div class="form-group">
                            <label>用户名:</label>
                            <input type="text" class="form-control" name="userName" placeholder="账号/用户名">
                        </div>
                        <div class="form-group">
                            <label>密码:</label>
                            <input type="password" class="form-control" name="passWord" placeholder="密码">
                        </div>

                        <button type="button" class="btn btn-success btn-flat m-b-30 m-t-30" onclick="Login()">登录</button>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="~/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script>
        $(function () {

        })
        function Login() {

                success: function (data) {

                    if (data != null) {
                        $.ajax({
                            url: "/Managerss/Logins",
                            type: "post",
                            data: JSON.stringify(data),
                            async: false,
                            dataType: "json",
                            contentType: "application/json",
                            success: function (a) {
                                location.href = "/Managerss/LoginIndex?id="+data.Id;
                            }
                        })

                    }
                    else {
                        alert("登录失败!");
                    }
                }



            $.ajax({
                url: "http://localhost:8066/Users/Login",
                type: "get",
                data:
                {
                    userName: "主管",
                    passWord: 3
                },
                success: function (data) {
                    if (data > 0) {
                        //把用户名存入JS缓存
                        localStorage.uname = "主管";
                        localStorage.ID = data;

                        location.href = "index.html";
                    }
                    else {
                        ShowMessageBox(false, "用户名或密码错误");
                    }
                }

            })
        }
    </script>

</body>
